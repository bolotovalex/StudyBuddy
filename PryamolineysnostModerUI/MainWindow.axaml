                <!--         <TextBox Grid.Row="0" Grid.Column="1" Foreground="Black" Background="rgb(247,247,247)" Margin="7"></TextBox> -->
                <!--         <Label Grid.Row="1" Grid.Column="0" Foreground="Black" Background="rgb(247,247,247)" Margin="7" VerticalAlignment="Center">234</Label> -->
                <!--         <TextBox Grid.Row="1" Grid.Column="1" Foreground="Black" Background="rgb(247,247,247)" Margin="7"></TextBox> -->
                <!--         <Label Grid.Row="2" Grid.Column="0" Foreground="Black" Background="rgb(247,247,247)" Margin="7" VerticalAlignment="Center">Измерения произвел</Label> -->
                <!--         <TextBox Grid.Row="2" Grid.Column="1" Foreground="Black" Background="rgb(247,247,247)" Margin="7"></TextBox> -->
                <!-- -->
                <!--     </Grid> -->
                <!--     <Button Name="Counter" Background="Aquamarine" CornerRadius="5" BorderThickness="1" BorderBrush="Black" -->
                <!--             Content="Счетчик: 0" Click="Counter_Click"> -->
                <!--     </Button> -->
                <!-- -->
